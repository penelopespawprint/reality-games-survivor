{
  "name": "rgfl-survivor",
  "version": "1.0.0",
  "description": "Reality Games Fantasy League: Survivor",
  "private": true,
  "workspaces": [
    "web",
    "mobile",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "dev:server": "npm run dev --workspace=server",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "npm run build --workspace=web && npm run build --workspace=server",
    "dev:mobile": "npm run start --workspace=mobile"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
