{
  "name": "rgfl-survivor",
  "version": "1.0.0",
  "description": "Reality Games Fantasy League: Survivor",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "web",
    "mobile"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "dev:server": "cd server && npm run dev",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "npm run build --workspace=web",
    "build:server": "cd server && npm run build",
    "dev:mobile": "npm run start --workspace=mobile"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
