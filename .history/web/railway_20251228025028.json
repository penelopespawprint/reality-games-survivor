{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npm ci && npm run build"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "npx serve dist -s -l $PORT",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  }
}
